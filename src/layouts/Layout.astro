---
interface Props {
	title: string;
	description: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	 

	:root {
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);

		--color-black: #1a1a1a;
		--color-darks: #404040;
		--color-greys: #999;
		--color-light: #f2f2f2;
		--color-white: #fff;
		--color-vinotinto: #5A0512;
		--color-golden-200: #E2CF8B;
		--color-golden-300: #f5e5ad;
		--shadow-small: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
		--shadow-medium: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
		--shadow-large: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
	}
	html {
		font-family: system-ui, sans-serif;
		background: white;
		background-size: 224px;
	}
	body{
		margin: 0;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}

	::-webkit-scrollbar {
		width: 12px; /* Ancho de la barra de scroll */
	}

	/* Color de fondo de la barra de scroll */
	::-webkit-scrollbar-track {
		background-color: var(--color-vinotinto);
	}

	/* Color del mango (thumb) de la barra de scroll */
	::-webkit-scrollbar-thumb {
		background-color: var(--color-golden-200);
		border-radius: 6px; /* Borde redondeado */
	}

	/* Estilos cuando se pasa el mouse sobre la barra de scroll */
	::-webkit-scrollbar-thumb:hover {
		background-color: lighten(var(--color-golden-200), 10%); /* Puedes ajustar la luminosidad aquí */
	}

	/* Estilos cuando se está interactuando con la barra de scroll */
	::-webkit-scrollbar-thumb:active {
		background-color: darken(var(--color-golden-200), 10%); /* Puedes ajustar la oscuridad aquí */
	}

	.subTitle{
		font-size: 2.1rem;
		color: var(--color-vinotinto);
	}

	.contentInfo{
		padding: 1rem;
		text-align: center;
	}
	.containerCards{
		margin-top: 3rem;
		display: flex;
		justify-content: center;
		flex-wrap: wrap;
	}

</style>
