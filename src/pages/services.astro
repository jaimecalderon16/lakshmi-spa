import Footer from '../components/Footer.astro';

const pricingData = [
    {
        title: "Masaje 1",
        imgUrl: "https://chmassagetherapy.co.uk/wp-content/uploads/2022/08/toptotoe-1024x684.jpg",
        pricing60: "$49.000",
        pricing90: "$69.000",
        pricing120: "$89.000",
        description: "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.",
    },
    {
        title: "Masaje 2",
        imgUrl: "https://www.massagesme.uk/img/blogs/the-most-popular-massages-in-london-uk.jpg",
        pricing60: "$79.000",
        pricing90: "$99.000",
        pricing120: "$119.000",
        description: "Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.",
    },
    {
